<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RainText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary_800</item>
        <item name="colorPrimaryVariant">@color/Primary_700</item>
        <item name="colorOnPrimary">@color/Secondary_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary_500</item>
        <item name="colorSecondaryVariant">@color/Secondary_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Secondary_700</item>
        <!-- Customize your theme here. -->
        <item name="android:backgroundDimAmount">0.25</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@color/Fragment_absolute_background</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>
</resources>